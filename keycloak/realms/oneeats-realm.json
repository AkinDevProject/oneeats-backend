    },
    {
      "username": "restaurant@oneeats.com",
      "email": "restaurant@oneeats.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Restaurant",
      "lastName": "Manager",
      "credentials": [
        {
          "type": "password",
          "value": "restaurant123",
          "temporary": false
        }
      ],
      "realmRoles": ["restaurant", "user"]
    },
    {
      "username": "client@oneeats.com",
      "email": "client@oneeats.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Client",
      "lastName": "Mobile",
      "credentials": [
        {
          "type": "password",
          "value": "client123",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    }
  ],
  "browserSecurityHeaders": {
    "contentSecurityPolicyReportOnly": "",
    "xContentTypeOptions": "nosniff",
    "xRobotsTag": "none",
    "xFrameOptions": "SAMEORIGIN",
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self'; object-src 'none';",
    "xXSSProtection": "1; mode=block",
    "strictTransportSecurity": "max-age=31536000; includeSubDomains"
  },
  "smtpServer": {},
  "internationalizationEnabled": true,
  "supportedLocales": ["en", "fr"],
  "defaultLocale": "fr"
}
